/*! \file shader.vert
 *
 * \brief The vertex shader for a triangle 
 *
 * \author Lamont Samuels 
 *
 */
#version 410 core 

// Output color for a vertex 
out vec4 out_Color;

void main(void)
{
	// Assign the color yellow to all vertices of the triangle 
	out_Color = vec4(1.0f, 1.0f, 0.0f, 1.0f); 
}